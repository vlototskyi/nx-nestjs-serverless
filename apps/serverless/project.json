{
  "name": "serverless",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/serverless/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/serverless",
        "color": true,
        "command": "mkdir -p node_modules && TS_NODE_PROJECT=tsconfig.serverless.json sls package && rm -rf node_modules"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/serverless",
        "color": true,
        "command": "TS_NODE_PROJECT=tsconfig.serverless.json nodemon --exec \"rm -rf .build && sls offline start\""
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/serverless",
        "color": true,
        "command": "mkdir -p node_modules && TS_NODE_PROJECT=tsconfig.serverless.json sls deploy --verbose && rm -rf node_modules"
      },
      "dependsOn": [
        {
          "target": "deploy",
          "projects": "dependencies"
        }
      ]
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/serverless",
        "color": true,
        "command": "TS_NODE_PROJECT=tsconfig.serverless.json sls remove"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/serverless/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/serverless/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
